{{#each applicants}}
    {{#if @first}}
        <h1>{{job_title}}</h1>
    {{/if}}
{{/each}}

<table>
    <thead>
        <th scope="col"><strong>Applicant Name</strong></th>
        <th scope="col"><strong>Applied On</strong></th>
    </thead>
    <tbody>
        {{#each applicants}}
        <tr>
            <td><a href="/profile/user/{{this.username}}">{{this.first_name}} {{this.last_name}}</a></td>
            <td>{{this.application_date}}</td>
        </tr>
        {{/each}}
    </tbody>
</table>