{{#each applicants}}
    {{#if @first}}
        <h1>{{job_title}}</h1>
    {{/if}}
{{/each}}

<table>
    <thead>
        <th scope="col"><strong>Applicant Name</strong></th>
        <th scope="col"><strong>Applied On</strong></th>
        <th scope="col"><strong>Email</strong></th>
        <th scope="col"><strong>Status</strong></th>
    </thead>
    <tbody>
        {{#each applicants}}
        <tr>
            <td><a href="/profile/user/{{this.username}}">{{this.first_name}} {{this.last_name}}</a></td>
            <td>{{this.application_date}}</td>
            <td>
                <a href="mailto:{{this.email}}?subject=Interview%20for%20{{this.job_title}}&body=Dear%20{{this.first_name}},"><button>Email</button></a>
            </td>
            <td>
                {{#if (eq this.application_status "Rejected")}}
                <span>Rejected</span>
                {{else}}
                <form action="/jobs/rejectapplicant/{{this.job_id}}/{{this.user_id}}" method="POST" class="reject-form"><button type="submit">Reject</button></form>
                {{/if}}
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>