<div class="userpost">
<h1 class="post-title">{{postInfo.post_title}}</h1>
<span class="post-writer">Written by: {{postInfo.first_name}} {{postInfo.last_name}}</span>

<br>

{{#each postPicPath}}
    {{#if this}}
        <img src="{{this}}" alt="Picture describing the post">
    {{/if}}
{{/each}}

<h4 class="post-summary" style="white-space: pre-line;">{{postInfo.post_summary}}</h4>
<p class="post-description" style="white-space: pre-line;">{{postInfo.post_description}}</p>
</div>