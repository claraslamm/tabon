<link rel="stylesheet" href="/jobs.css">

<div class="create">
    <p class="post-text">Create a post here</p>

    <form action="/posts/createpost" method="POST" enctype="multipart/form-data">
        <div class="post-question">
            <div><label for="posttitle" class="post-form-label">Post Title<span class="asterisk">*</span></label></div>
            <input type="text" name="posttitle" id="posttitle" required>
        </div>

        <div class="post-question">
            <div><label for="postsummary" class="post-form-label">Give your post a short summary<span class="asterisk">*</span></label></div>
            <textarea id="postsummary" name="postsummary" required></textarea>
        </div>

        <div class="post-question">
            <div><label for="postdescription" class="post-form-label">Write your full post here<span class="asterisk">*</span></label></div>
            <textarea id="postdescription" name="postdescription" required></textarea>
        </div>

        <div class="post-question">
            <div><label for="postpic" class="post-form-label">Upload a picture to accompany your post<span class="asterisk">*</span></label></div>
            <input type="file" name="postpic" accept="image/png, image/jpeg" required>
        </div>
        
        <button type="submit" class="submit">Post</button>
    </form>
</div>