<h1>Here are the jobs that you have posted</h1>

<table>
    <thead>
        <th scope="col"><strong>Job Title</strong></th>
        <th scope="col"><strong>Number of Applicants</strong></th>
    </thead>
    <tbody>
        {{#each jobs}}
        <tr>
            <td><a href="/jobs/jobdetails/{{this.id}}">{{this.job_title}}</a></td>
            <td><a href="/jobs/listedjobs/{{this.id}}">{{this.applicant_count}}</a></td>
        </tr>
        {{/each}}
        {{#each noApplicants}}
        <tr>
            <td><a href="/jobs/jobdetails/{{this.id}}">{{this.job_title}}</a></td>
            <td><a href="/jobs/listedjobs/{{this.id}}">0</a></td>
        </tr>
        {{/each}}
    </tbody>
</table>