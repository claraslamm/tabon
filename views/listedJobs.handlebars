<div class="job-pages">
    
    <div class="company-jobs-buttons">
        <div class="jobs-buttons">
            <span><a href="/jobs" class="opaque">Job Board</a></span>
            <span><a href="/jobs/listedjobs" class="listed-jobs right">Listed Jobs</a></span>
        </div>
        <div>
            <div id="postjob-button"><a href="/jobs/createjob">Create a Job</a></div>
        </div>
    </div>

    {{#each jobs}}
        <div class="jobcontainer">
            <div>
                <img src="/images/companylogos/companylogo{{this.company_id}}" class="small-logo">
            </div>

            <div class="small-container">
                <span class="top-text">{{this.job_title}}</span>
                <span>{{this.company_name}}</span>
            </div>
            <div class="small-container">
                <span class="top-text">{{this.location}}</span>
                <span>Location</span>
            </div>
            <div class="small-container">
                <span class="top-text">{{this.applicant_count}}</span>
                <span>Number of Applicants</span>
            </div>
            <div class="more-info">
                <a href="/jobs/listedjobs/{{this.id}}">View Applicants</a>
            </div>
        </div>
    {{/each}}

    {{#each noApplicants}}
        <div class="jobcontainer">
            <div>
                {{#if this.hasProfilePic}}
                    <img src="/images/companylogos/companylogo{{this.company_id}}" class="small-logo">
                {{else}}
                    <img src="/images/companylogos/company-logo-default.png" class="small-logo">
                {{/if}}
            </div>

            <div class="small-container">
                <span class="top-text">{{this.job_title}}</span>
                <span>{{this.company_name}}</span>
            </div>
            <div class="small-container">
                <span class="top-text">{{this.location}}</span>
                <span>Location</span>
            </div>
            <div class="small-container">
                <span class="top-text">0</span>
                <span>Number of Applicants</span>
            </div>
            <div class="more-info">
                <a href="/jobs/listedjobs/{{this.id}}">View Applicants</a>
            </div>
        </div>
    {{/each}}
    
</div>
