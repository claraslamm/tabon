<form action="/profile/edituserprofile" method="POST" enctype="multipart/form-data">
  <h4>Edit Your User's Profile</h4>
  <br>

  <label for="profilepic">Upload your profile picture</label>
  <br>
 
  <input type="file" id="profilepic" name="profilepic">
  <br>
  <button type="submit">Upload</button>
  <br>

  <label class="labelname" for="firstname">First Name</label>
  <input type="text" id="firstname" name="firstname" value="{{userInfo.first_name}}">
  <br>

  <label class="labelname" for="lastname">Last Name</label>
  <input type="text" id="lastname" name="lastname" value="{{userInfo.last_name}}">
  <br>

  <label class="labelname" for="aboutme">About Me</label>
  <textarea id="aboutme" name="aboutme">{{userInfo.about_section}}</textarea>
  <br>

  {{!-- <label for="project">Project</label> --}}
  <div id="project">
    <label class="projectlabel1" for="projectheader">Your project's name</label>
    <input type="text" id="projectheader" name="projectheader" value="{{projectInfo.project_name}}">
    <br>

    <label class="projectlabel2" for="projectdescription">Tell us more about your project</label>
    <textarea name="projectdescription" id="projectdescription">{{projectInfo.project_description}}</textarea>
    <br>

    <label for="uploadproject">Upload your project</label>
    <div id="uploadproject">
      <input type="file" name="projectpic1" accept="image/png, image/jpeg">
      <input type="file" name="projectpic2" accept="image/png, image/jpeg">
      <input type="file" name="projectpic3" accept="image/png, image/jpeg">
    </div>
  </div>


  <label for="uploadresumes">Upload your resume</label>
  <br>
  <input type="file" id="uploadresume" name="uploadresume" accept=".doc,.docx,.xml,application/msword,application/vnd.openxmlformats-officedocument.wordprocessingml.document">

  <br>

  <button type="submit">Save</button>
</form>