<form action="/profile/editcompanyprofile" method="POST">
  <label for="edit-profile">Edit Your Company's Profile</label>
  <br>

  <label for="companyname">Your company's name</label>
  <input type="text" id="companyname" value="{{#each companyInfo}}{{this.company_name}}{{/each}}" name="companyname">
  <br>

  <label for="companydescription">About Us</label>
  <textarea id="companydescription" name="companydescription"></textarea>
  <br>

  <label for="companywebsite">Your company's website</label>
  <input type="text" id="companywebsite" name="companywebsite">
  <br>

  <label for="headcount">Your company's number of employees</label>
  <input type="number" id="headcount" name="headcount">
  <br>

  <label for="companyremote">Does your company offer remote work?</label>

  <label for="remotetrue">Yes</label>
  <input type="radio" id="remotetrue" name="companyremote" value="yes">
    <label for="remotefalse">No</label>
  <input type="radio" id="remotefalse" name="companyremote" value="no">
  
  <label for="aboutusheader">A short header for something special about your company</label>
  <input type="text" id="aboutusheader" name="aboutusheader">
  <br>
  <label for="aboutusdescription">Share more details with your potential employees!</label>
  <textarea name="aboutusdescription" id="aboutusdesceription"></textarea>

  <button type="submit">Save</button>
</form>

