{{#if isCompany}}
<button class="edit-btn"><a href="/profile/editcompanyprofile">Edit Profile</a></button>
<br>
{{/if}}

{{#each logoPath}}
{{#if this}}
<img src="{{this}}" alt="Company Logo" class="profilepicture">
{{else}}
<img src="/images/companylogos/company-logo-default.png" class="profilepicture" alt="Profile Picture">
{{/if}}
{{/each}}

<p>{{companyInfo.company_name}}</p>
<p>{{companyInfo.company_website}}</p>
<p>Employees: {{companyInfo.headcount}}</p>
<p>Remote: {{companyInfo.company_remote}}</p>

<h2>About</h2>
<p>{{companyInfo.company_description}}</p>

{{#each companyJobs}}
<p>{{this.job_title}}</p>
<p>{{this.location}}</p>
<a href="/jobs/jobdetails/{{this.job_id}}"><button>View Role</button></a>
{{/each}}