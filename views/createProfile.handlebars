
<form action="/profile/createprofile" method="POST">
    <label for="user_type">Are you a job seeker or looking to hire?</label>
    <div id="user_type">
        <label for="typeUser">Job Seeker</label>
        <input type="radio" id="typeUser" name="user_type" value="user">
        <label for="typeCompany">Looking to Hire</label>
        <input type="radio" id="typeCompany" name="user_type" value="company">
    </div>
    <br>

    <div id="userForm" style="display:none">
    <label for="firstname">First Name</label>
    <input type="text" id="firstname" name="firstname">
    <br>

    <label for="lastname">Last Name</label>
    <input type="text" id="lastname" name="lastname">
    <br>

    <label for="aboutme">Tell us a little bit about yourself</label>
    <textarea id="aboutme" name="aboutme"></textarea>
    <br>
    </div>

    <div id="companyForm" style="display:none">
        <label for="companyname">Company Name</label>
        <input type="text" id="companyname" name="companyname">
        <br>

        <label for ="companydescription">Give a description of your company</label>
        <textarea id="companydescription" name="companydescription"></textarea>
        <br>

        <label for ="companywebsite">What is your company's website</label>
        <input type="text" id="companywebsite" name="companywebsite">
        <br>

        <label for="headcount">How many people does your company employ?</label>
        <input type="number" id="headcount" name="headcount">
        <br>

        <label for="companyremote">Does your company offer remote work?</label>
        <div id="companyremote">
            <label for="remotetrue">Yes</label>
            <input type="radio" id="remotetrue" name="companyremote" value="yes">
            <label for="remotefalse">No</label>
            <input type="radio" id="remotefalse" name="companyremote" value="no">
        </div>
        
        <label for="aboutusheader">A short header for something special about your company</label>
        <input type="text" id="aboutusheader" name="aboutusheader">
        <br>
        <label for="aboutusdescription">Give us more details on what this special thing is</label>
        <textarea id="aboutusdescription" name="aboutusdescription"></textarea>
    </div>

    <button type="submit">Create Profile</button>
</form>

<script src="/createprofile.js"></script>